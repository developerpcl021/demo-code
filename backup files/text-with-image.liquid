  {
    "name": "Text with Image",
     "settings": [
        
     {
  
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
     {
  
        "type": "textarea",
        "id": "title",
        "label": "Heading"
      },
        {
  
        "type": "textarea",
        "id": "subtitle",
        "label": "Sub Heading"
      },
       {
  
        "type": "textarea",
        "id": "buttontext",
        "label": "Button Text"
      },
          {
  
        "type": "url",
        "id": "buttonlink",
        "label": "Button Link"
      } 
   
        
    
      
       
    ],
      
     "presets": [
      {
        "name": "Text with Image"
      }
    ]
  }
