
    <!-- Shop Diamonds by Shape -->
    <style>
        .shop-by-shape .slick-prev:before,
        .shop-by-shape .slick-next:before {
          opacity: .75;
          color: black;
          font-size: 32px;
          font-weight: bold;
        }
        .shop-by-shape .slick-prev:before{
          content: url(https://cdn.shopify.com/s/files/1/0639/0805/3161/files/left-arrow.svg?v=1717659877) !important;
        }
        .shop-by-shape .slick-next:before{
          content: url(https://cdn.shopify.com/s/files/1/0639/0805/3161/files/right-arrow.svg?v=1717659877) !important;
        }
        .shop-by-shape .slick-next {
          right: 44%;
        }

        .shop-by-shape .slick-prev {
          left: 44%;
        }

        .shop-by-shape .slick-prev,
        .shop-by-shape .slick-next {
          top: 110%;
        }
        .slick-slide>div {
          /* transform: scale(.5); */
          transition: transform .3s cubic-bezier(.4, 0, .2, 1);
        }
       @media (min-width:767px) {
         .slick-slide{transition:2s;scale:0.95;}
        .slick-center{scale:1.8;transition:2s;}
       }

        @media (min-width:1320px) {
        .shop-by-shape .slick-next {
          right: 45%;
        }

        .shop-by-shape .slick-prev {
          left: 45%;
        }
        }
        
        @media (min-width:1440px) {

          .shop-by-shape .slick-prev:before,
          .shop-by-shape .slick-next:before {
            font-size: 44px;
          }

          .shop-by-shape .slick-prev,
          .shop-by-shape .slick-next {
            top: 105%;
          }

          .shop-by-shape .slick-next {
            right: 45%;
          }

          .shop-by-shape .slick-prev {
            left: 45%;
          }
        }

        @media (max-width:576px) {
          .carousel-container {
            zoom: 60%;
          }
          .slick-slide img{width:100%;}
          .shop-by-shape .slick-prev,
          .shop-by-shape .slick-next {
            top: 100%;
          }
        }

        @supports (-webkit-touch-callout: none) {
          .shop-by-shape .slick-next {
            right: 42%;
          }

          .shop-by-shape .slick-prev {
            left: 37%;
          }

          .shop-by-shape .slick-prev,
          .shop-by-shape .slick-next {
            top: 90%;
          }

          .carousel-container .iphone-p {
            font-size: 12px !important;
            line-height: normal;
          }

        }
      </style>
