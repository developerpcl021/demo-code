<!-- full sized banner -->
<section class="py-10 md:py-20">
    <div
      style="background-image: url({{ section.settings.image | img_url: 'master'}});"
      class="bg-hero-banner bg-cover bg-no-repeat bg-center bg-black min-h-[60vh] py-20 flex items-center relative"
    >
      <div class="container lg:pl-6 grow">
        <h1
          class="font-lato text-lg md:text-xl font-normal text-black"
          data-aos="fade-up"
          data-aos-easing="ease-in-back"
          data-aos-delay="0"
          data-aos-duration="1500"
          data-aos-offSet="0"
        >
          {{ section.settings.title }}
        </h1>
        <p
          class="font-lato font-normal text-sm md:text-lg text-black tracking-[2.4px] xl:w-[810px] md:leading-10 mt-4 md:mt-10"
          data-aos="fade-up"
          data-aos-easing="ease-in-back"
          data-aos-delay="150"
          data-aos-duration="1500"
          data-aos-offSet="0"
        >
          {{ section.settings.subtitle }}
        </p>
        <div
          data-aos="fade-up"
          data-aos-easing="ease-in-back"
          data-aos-delay="250"
          data-aos-duration="1500"
          data-aos-offSet="0"
        >
          <a
            href="{{ section.settings.buttonlink }}"
            class="
              font-lato text-xsm md:text-md font-normal tracking-[1.8px] ho ver:text-white px-10 py-2 md:py-4 bg-white uppercase hover:bg-transparent border-white inline-block border-2
              border-solid duration-300 rounded-md mt-4 md:mt-10 pointer-event-none border-white hover:border-black hover:text-black
            "
          >
            {{- section.settings.buttontext -}}
          </a>
        </div>
      </div>
    </div>
  </section>
  <!-- ////////////// -->
  
  {% schema %}
  {
    "name": "Image Section",
     "settings": [
  
     {
  
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
     {
  
        "type": "textarea",
        "id": "title",
        "label": "Heading"
      },
        {
  
        "type": "textarea",
        "id": "subtitle",
        "label": "Sub Heading"
      },
       {
  
        "type": "textarea",
        "id": "buttontext",
        "label": "Button Text"
      },
          {
  
        "type": "url",
        "id": "buttonlink",
        "label": "Button Link"
      }
  
  
  
  
  
    ],
  
     "presets": [
      {
        "name": "Image Section"
      }
    ]
  }
  {% endschema %}
  