 <!-- Fine Jewelry Collections -->
 <section class="mt-6 md:my-10 xl:my-20">
    <div class="container">
      <div class="md:flex justify-between items-start pb-2 md:pb-[46px] border-b-2 border-black">
        <h3 class="font-lato font-normal text-lg md:text-xl uppercase leading-normal" data-aos="fade-right"
          data-aos-easing="ease-in-back" data-aos-delay="0" data-aos-duration="800" data-aos-offSet="0">
            {{ section.settings.title }}
        </h3>

        <p class="font-lato font-normal text-sm md:text-[16px] xl:text-md text-black leading-6 md:leading-9 tracking-[1.8px] capitalize md:w-[415px] md:text-end xl:text-start"
          data-aos="fade-left" data-aos-easing="ease-in-back" data-aos-delay="0" data-aos-duration="800"
          data-aos-offSet="0">
          {{ section.settings.subtitle }}
        </p>
      </div>

      <div
        class="grid grid-cols-2 lg:grid-cols-4 gap-4 py-6 md:py-10 lg:py-[44px] xxl:py-14 border-b-2 border-black">
         {% for block in section.blocks %}
        
          <a href="{{ block.settings.link }}"class="block" data-aos="fade-up" data-aos-easing="ease-in-back" data-aos-delay="0"
          data-aos-duration="800">
            <div class="overflow-hidden group sm:max-md:h-[500px] xl:min-h-[290px]">
              <img src="{{ block.settings.image | img_url: 'master'}}" alt="a girl wants to see ear rings"
                class="w-full object-contain group-hover:scale-[1.1] duration-300" height="" width="" />
            </div>
            <h4
              class="font-lato font-normal text-sm md:text-md xl:text-lg text-black mt-2 md:mt-4 text-center">
              {{ block.settings.title }}
            </h4>
          </a>
      
        {% endfor %}
     
      </div>
    </div>
  </section>
  <!-- *****end****** -->

  
    {% schema %}
{
"name": "Collection Section 2",
 "settings": [
    

 {

    "type": "textarea",
    "id": "title",
    "label": "Heading"
  },
    {

    "type": "textarea",
    "id": "subtitle",
    "label": "Sub Heading"
  } 
    

  
   
],
  "blocks": [

  {
    "type": "text",
    "name": "text",
    "settings": [
    
 {

    "type": "image_picker",
    "id": "image",
    "label": "Image"
  } ,
 {

    "type": "textarea",
    "id": "title",
    "label": "Heading"
  },
       {

    "type": "url",
    "id": "link",
    "label": "Link"
  }  

       
    ]
  }

  
   
],
 "presets": [
  {
    "name": "Collection Section 2"
  }
]
}
{% endschema %}