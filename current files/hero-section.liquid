<!-- heADER -->
<header>
  <div
    class="bg-[url({{ section.settings.mobimage | img_url: 'master'}})] md:bg-[url({{ section.settings.image | img_url: 'master'}})] bg-cover bg-no-repeat bg-center min-[1600px]:bg-right bg-black min-h-[70vh] lg:min-h-[40vh] xl:min-h-[90vh] 2xl:min-h-screen flex md:items-center relative "
  >
    <div class="container md:mt-[36px] lg:pl-6 grow pt-5 md:pt-0">
      <div class="banner-content md:w-[600px] xl:w-[675px] xxl:w-[810px]">
        <h1
          class="font-lato text-lg md:text-xl font-normal capitalize"
        >
          {{ section.settings.title }}
        </h1>
        <p
          class="font-lato font-normal text-sm md:text-lg tracking-[2.4px] md:leading-10 mt-4 md:mt-10"
        >
          {{ section.settings.subtitle }}
        </p>
        <div>
          <a
            href="{{ section.settings.buttonlink }}"
            class="
              font-lato text-xsm md:text-md font-normal tracking-[1.8px] hover:text-black px-10 py-2 md:py-4 bg-white
              uppercase hover:bg-transparent border-white hover:border-black inline-block border-2 border-solid duration-300 rounded-md mt-4 md:mt-10
            "
          >
            {{- section.settings.buttontext -}}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Light BG Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobimage",
      "label": "Mobile Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Sub Heading"
    },
    {
      "type": "textarea",
      "id": "buttontext",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "buttonlink",
      "label": "Button Link"
    }
  ],

  "presets": [
    {
      "name": "Light BG Image Banner"
    }
  ]
}
{% endschema %}
